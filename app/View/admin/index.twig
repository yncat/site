{% set page_title = "管理者ページ" %}
{#レイアウト継承#}
{% extends "layout/layout.twig" %}


{# スタイルシートの追加 #}
{% block header_scripts_add %}
{% endblock %}

{# ページ本文 #}
{% block page_content %}
	{% if message!=null %}
		<div class="alert-danger p-3">{{ message }}</div>
	{% endif %}

	<div class="jumbotron">
		<h2 class="text-center">
			管理者ページ
		</h2>
		<div class="container rx-5 mx-5">
			<p></p>
		</div>
	</div>

	{% for name,detail in menu %}
	<div class="card">
		<div class="card-body">
			<div class="row" style="justify-content: center; align-items: center;">
				<div class="bg-primary col-md-4">
					<h3 class="h1">
						{% if detail.method == "POST" %}
							<form action="{{ detail.link }}" method="POST">
								<input type="submit" style="border: none;" class="bg-primary text-white" value="{{ name }}">
								{{ csrf_field() | raw }}
							</form>
						{% else %}
							<a href="{{ detail.link }}" class="text-white">{{ name }}</a>
						{% endif %}
					</h3>
				</div>
				<div class="card-text col-md-8">
					<div class="container">
						<p class="my-0">{{ detail.description }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
{% endblock %}

{# フッダ以降に追加する内容 #}
{% block footer_scripts_add %}
{% endblock %}
