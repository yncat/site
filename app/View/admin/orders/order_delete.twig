{% set page_title = orderId ~ "の注文削除確認" %}


{#レイアウト継承#}
{% extends "layout/layout.twig" %}


{# スタイルシートの追加 #}
{% block header_scripts_add %}
{% endblock %}

{# ページ本文 #}
{% block page_content %}
<form method="post" autocomplete="off">

	<div class="jumbotron">
		<h2 class="text-center">
			注文番号{{ orderId }}　注文削除の最終確認
		</h2>
		<div class="container py-5 text-center">
			<p>
				{% if step=="confirm" %}
					この注文について、未入金であることを確認し、注文削除要求ボタンを押してください。
				{% else %}
					この操作により、以下の注文が削除されます。未入金であることを確認し、注文削除ボタンを押してください。
				{% endif %}
			</p>
		</div>
		{{ csrf_field() | raw }}
		<input type="hidden" name="requestId" value="{{ requestId }}">
		<input type="hidden" name="type" value="orderDelete">
		<input type="hidden" name="step" value="{{ step }}">
	</div>

	<dl>
		<dt>注文番号</dt>
		<dd>{{ orderId }}</dd>
	</dl>
	<input type="hidden" name="orderId" value="{{ orderId }}">

	<dl>
		<dt>注文者名</dt>
		<dd>{{ name }}</dd>
	</dl>

	<dl>
		<dt>メールアドレス</dt>
		<dd>{{ email }}</dd>
	</dl>


	<dl>
		<dt>注文日時</dt>
		<dd>{{ createdAt }}</dd>
	</dl>

	<dl>
		<dt>品名</dt>
		<dd>{{ productName }}</dd>
	</dl>

	<dl>
		<dt>エディション</dt>
		<dd>{{ edition }}</dd>
	</dl>

	<dl>
		<dt>単価</dt>
		<dd>{{ price }}</dd>
	</dl>

	<dl>
		<dt>個数</dt>
		<dd>{{ quantity }}</dd>
	</dl>

	<dl>
		<dt>合計金額</dt>
		<dd>{{ totalPrice }}</dd>
	</dl>

	{% if step=="confirm" %}
		<input type="submit" value="注文削除要求">
	{% else %}
		<input type="submit" value="注文削除">
	{% endif %}
</form>


{% endblock %}

{# フッタ以降に追加する内容 #}
{% block footer_scripts_add %}
{% endblock %}
