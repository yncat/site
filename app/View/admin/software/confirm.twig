{% set page_title = title ~ "公開情報最終確認" %}


{#レイアウト継承#}
{% extends "layout/layout.twig" %}


{# スタイルシートの追加 #}
{% block header_scripts_add %}
{% endblock %}

{# ページ本文 #}
{% block page_content %}
<form method="post" autocomplete="off">

	{% if message!=null %}
			<div class="alert-danger p-3">{{ message }}</div>
	{% endif %}

	<div class="jumbotron">
		{% if type=="new" %}
			<h2 class="text-center">
				{{ title }}　公開情報最終確認
			</h2>
			<div class="container py-5 text-center">
				<p>
					新規公開ソフトウェア情報の最終確認です。誤字・脱字を含めた記述内容と、全てのリンクの繊維を確認して問題なければＯＫボタンを押してください。更新リクエストが送信されます。
				</p>
			</div>
		{% else %}
			<h2 class="text-center">
				{{ title }}　公開情報変更最終確認
			</h2>
			<div class="container py-5 text-center">
				<p>
					ソフトウェア情報変更の最終確認です。誤字・脱字を含めた記述内容と、全てのリンクの繊維を確認して問題なければＯＫボタンを押してください。更新リクエストが送信されます。
				</p>
			</div>
		{% endif %}
		<input type="hidden" name="title" value="{{ title }}">
	</div>

	<dl>
		<dt><h3>キーワード</h3></dt>
		<dd>{{ keyword }}</dd>
	</dl>
	<input type="hidden" name="keyword" value="{{ keyword }}">

	<dl>
		<dt><h3>概要</h3></dt>
		<dd>{{ description }}</dd>
	</dl>
	<input type="hidden" name="description" value="{{ description }}">

	<dl>
		<dt><h3>特徴</h3></dt>
		<dd>
			<ul class="list-group">
				{% for feature in display_features %}
					<li class="my-3">
						<h4>{{ feature.0 }}</h4>
						<div class="container">
							{{ feature.1 | raw }}
						</div>
					</li>
				{% endfor %}
			</ul>
		</dd>
	</dl>
	<input type="hidden" name="features" value="{{ features }}">

	<dl>
		<dt><h3>リポジトリ</h3></dt>
		<dd><a href="https://github.com/{{ gitHubURL }}">{{ gitHubURL }}</a></dd>
	</dl>
	<input type="hidden" name="gitHubURL" value="{{ gitHubURL }}">

	<dl>
		<dt><h3>スナップショットタグ名</h3></dt>
		<dd>{{ snapshotTag }}</dd>
	</dl>
	<input type="hidden" name="snapshotTag" value="{{ snapshotTag }}">

	<dl>
		<dt><h3>スナップショットファイル</h3></dt>
		<dd><a href="https://github.com/{{ gitHubURL }}releases/download/{{ snapshotTag }}/{{ snapshotFile }}">{{ snapshotFile }}</a></dd>
	</dl>
	<input type="hidden" name="snapshotFile" value="{{ snapshotFile }}">

	<dl>
		<dt><h3>主担当メンバー</h3></dt>
		<dd>{{ display_staff }}</dd>
	</dl>
	<input type="hidden" name="staff" value="{{ staff }}">

	{% if type=="new" %}
		<dl>
			<dt><h3>リリースバージョン</h3></dt>
			<dd><a href="{{ releaseUrl }}">{{ version }}</a></dd>
		</dl>
		<input type="hidden" name="version" value="{{ version }}">
		<input type="hidden" name="releaseId" value="{{ releaseId }}">
		<input type="hidden" name="releaseUrl" value="{{ releaseUrl }}">

		<dl>
			<dt><h3>お知らせ文字列</h3></dt>
			<dd>{{ infoString }}</dd>
		</dl>
		<input type="hidden" name="infoString" value="{{ infoString }}">

		<dl>
			<dt><h3>バージョン履歴掲載情報</h3></dt>
			<dd><pre>{{ detailString }}</pre></dd>
		</dl>
		<input type="hidden" name="detailString" value="{{ detailString }}">

		<dl>
			<dt><h3>リリースファイル</h3></dt>
			<dd><a href="{{ fileUrl }}">{{ file }}</a></dl>
		<input type="hidden" name="file" value="{{ file }}">
		<input type="hidden" name="fileUrl" value="{{ fileUrl }}">
	{% endif %}

	<dl>
		{% if hidden=="no" %}
			<dt><h3>このソフトウェアは、公開ソフトウェア一覧に表示されます。</h3></dt>
		{% else %}
			<dt><h3>このソフトウェアは、公開ソフトウェア一覧から隠されます。</h3></dt>
		{% endif %}
	</dl>

	<input type="hidden" name="step" value="confirm">
	<input type="hidden" name="type" value="{{ type }}">
	<input type="hidden" name="hidden" value="{{ hidden }}">
	<input type="hidden" name="flag" value="{{ flag }}">

	<input type="submit" value="ＯＫ">
	{{ csrf_field() | raw }}
</form>


{% endblock %}

{# フッダ以降に追加する内容 #}
{% block footer_scripts_add %}
{% endblock %}
